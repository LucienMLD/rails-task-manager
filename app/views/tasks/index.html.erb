<h1>Tasks</h1>
<h3><%= link_to "Add a task", new_task_path %></h3>

<ul>
  <% @tasks.each do |task| %>
    <li><%= task.name + " : " + task.description %><br />
    <%= link_to "Show", task_path(task) %>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to "Delete", task_path(task), method: :delete %></li>
    <% end %>
</ul>
